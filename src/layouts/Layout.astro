---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Evelyn1313 Ltd. - Your Trusted Construction Partner" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Evelyn1313 Ltd. Construction</title>
  </head>
  <body class="bg-gray-50">
    <Header />
    <main class="pt-20">
      <slot />
    </main>
    <Footer />
  </body>
</html>