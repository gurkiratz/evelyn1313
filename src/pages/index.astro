---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import HeroCarousel from '../components/HeroCarousel.astro';
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative">
    <HeroCarousel />
  </section>

  <!-- Services Section -->
  <section id='services' class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <ServiceCard
          title="Home Renovation"
          description="Turn your house into a dream home with our comprehensive renovation services."
          icon="🏠"
        />
        <ServiceCard
          title="Kitchen Remodeling"
          description="Make your kitchen the heart of your home with custom designs tailored to your needs."
          icon="🍳"
        />
        <ServiceCard
          title="Bathroom Remodeling"
          description="Transform your bathroom into a luxurious oasis with modern designs and fixtures."
          icon="🛁"
        />
        <ServiceCard
          title="Floor Plan Alterations"
          description="Reimagine your space! We can redesign layouts to optimize functionality and flow, whether you need more open space or additional rooms."
          icon="📐"
        />
        <ServiceCard
          title="Basements and Attics"
          description="Maximize your home's potential with fully finished basements and attics. Perfect for extra living space, home offices, or entertainment areas."
          icon="🏗️"
        />
        <ServiceCard
          title="Concrete Finishing"
          description="Durable and visually appealing concrete work for patios, floors, and more. We ensure a flawless finish that lasts for years."
          icon="🏗️"
        />
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12">Happy Clients, Beautiful Homes</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <TestimonialCard
          quote="Evelyn1313 Ltd. transformed our outdated kitchen into a modern masterpiece. The team was professional, timely, and a pleasure to work with!"
          author="Ravinder L., Homeowner"
        />
        <TestimonialCard
          quote="Our basement now feels like a second living room! Thanks to their expertise, we have a space we love."
          author="S. Sharma"
        />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold mb-6">Ready to Transform Your Space?</h2>
      <p class="text-xl mb-8">Let's discuss your vision and make it a reality.</p>
      <a href="/contact" class="bg-white text-primary px-8 py-3 rounded-md text-lg font-semibold hover:bg-gray-100 transition">
        Get Started Today
      </a>
    </div>
  </section>
</Layout>